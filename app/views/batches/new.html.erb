<% if !@batch.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @batch.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>
<h1>Consulta em Lote</h1>
<h3>Insira uma tabela .xls com o seguinte formarto ("Logradouro","Número","Bairro")</h3>
<div class = "well">
   <%= form_for @batch, html: { multipart: true } do |f| %>
      <%= f.label :name %> 
      <%= f.text_field :name %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <br>
      <br>
      <button> <%= link_to 'Voltar', root_path %> </button>
      <%= f.submit "Avançar", class: "btn btn-primary" %>
   <% end %>
</div>

